{
    "manifest_version": 2,

    "name": "HMRC Accessibility Checker",
    "description": "Automated accessibility checks for government services",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": [
        "popup.html",
        "/img/*"
    ]
}